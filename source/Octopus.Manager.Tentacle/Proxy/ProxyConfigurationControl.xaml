<UserControl x:Class="Octopus.Manager.Tentacle.Proxy.ProxyConfigurationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Octopus.Manager.Tentacle.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Name="Root"
             FontWeight="Normal"
             d:DesignHeight="650" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Style="{StaticResource TextBlock.Heading}" Text="{Binding Title}"
                       Visibility="{Binding ElementName=Root, Path=ShowHeader, Converter={StaticResource Converter.BooleanToVisibility}}" />
            <TextBlock Style="{StaticResource TextBlock.Subtle}" Text="{Binding Description}" FontWeight="Bold" />

            <!--
            <controls:ControlGroup Header="Proxy mode" Target="{Binding ElementName=proxyRadio}">
                <RadioButton Name="proxyRadio" Margin="0,5,0,0" IsChecked="{Binding Path=UseNoProxy, Mode=TwoWay}">Do not use a proxy</RadioButton>
                <RadioButton Margin="0,10,0,0" IsChecked="{Binding Path=UseDefaultProxy, Mode=TwoWay}">Use the proxy server configured in Internet Explorer</RadioButton>
                <RadioButton Margin="0,10,0,0" IsChecked="{Binding Path=UseDefaultProxyCustomCredentials, Mode=TwoWay}">Use the proxy server configured in Internet Explorer, with custom credentials</RadioButton>
                <RadioButton Margin="0,10,0,0" IsChecked="{Binding Path=UseCustomProxy, Mode=TwoWay}">Use a custom proxy server</RadioButton>
            </controls:ControlGroup>-->
            <StackPanel MaxWidth="300" HorizontalAlignment="Left">
                <ComboBox
                    Margin="0,15,0,20"
                    materialDesign:HintAssist.Hint="Proxy Mode"
                    materialDesign:ComboBoxAssist.ClassicMode="True"
                    SelectedValue="{Binding ProxyConfigType, Mode=TwoWay}"
                    ItemsSource="{Binding ProxyConfigTypes, Mode=OneTime}"
                    SelectedValuePath="Key" DisplayMemberPath="Value" MinWidth="150" HorizontalAlignment="Left" />

                <StackPanel
                    Visibility="{Binding Path=ProxyConfigType, Converter={StaticResource Converter.EnumToVisibilityConverter}, ConverterParameter=DefaultProxyCustomCredentials}"
                    Margin="0,0,0,20">
                    <TextBox Margin="0,0,0,20"
                             Text="{Binding Path=ProxyUsername, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                             materialDesign:HintAssist.Hint="Proxy username"
                             materialDesign:ValidationAssist.Background="Transparent" />

                    <controls:PasswordEditor HorizontalAlignment="Left" x:Name="proxyPass"
                                             Password="{Binding Path=ProxyPassword, Mode=TwoWay}" Margin="0,5,0,0"
                                             Width="200" />
                    <controls:ErrorMessage HorizontalAlignment="Left" Margin="0,5,0,0" ErrorPath="ProxyPassword" />
                </StackPanel>

                <StackPanel
                    Visibility="{Binding Path=ProxyConfigType, Converter={StaticResource Converter.EnumToVisibilityConverter}, ConverterParameter=CustomProxy}">
                    <StackPanel Margin="0,0,0,20">
                        <TextBox
                            Text="{Binding Path=ProxyServerHost, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                            materialDesign:ValidationAssist.Background="Transparent"
                            materialDesign:HintAssist.Hint="Proxy Host" Name="ProxyServerHostTextBox" />

                        <TextBlock Text="DNS hostname of the Proxy server. Examples:"
                                   Style="{StaticResource TextBlock.Subtle}" Margin="0,15,0,0" />
                        <TextBlock Style="{StaticResource TextBlock.Subtle}" Margin="20,0,0,0">
                            <Run Text="•" />
                            <Run Text=" 10.0.0.1 " Style="{StaticResource TextBlock.Example}" />
                        </TextBlock>
                        <TextBlock Style="{StaticResource TextBlock.Subtle}" Margin="20,0,0,0">
                            <Run Text="•" />
                            <Run Text=" web01.local " Style="{StaticResource TextBlock.Example}" />
                        </TextBlock>
                        <TextBlock Style="{StaticResource TextBlock.Subtle}" Margin="20,0,0,0">
                            <Run Text="•" />
                            <Run Text=" web01.mynetwork.com " Style="{StaticResource TextBlock.Example}" />
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBox
                            Text="{Binding Path=ProxyServerPort, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                            Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                            materialDesign:ValidationAssist.Background="Transparent"
                            materialDesign:HintAssist.Hint="Proxy Port" Name="ProxyServerPortTextBox" Width="150"
                            HorizontalAlignment="Left" />
                        <TextBlock Text="The TCP port of the Proxy server" Style="{StaticResource TextBlock.Subtle}"
                                   Margin="0,15,0,0" />
                    </StackPanel>

                    <TextBox Margin="0,0,0,20"
                             Text="{Binding Path=ProxyUsername, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                             materialDesign:ValidationAssist.Background="Transparent"
                             materialDesign:HintAssist.Hint="Proxy Login" />

                    <controls:PasswordEditor HorizontalAlignment="Left" x:Name="CustomProxyPass"
                                             Password="{Binding Path=ProxyPassword, Mode=TwoWay}" Margin="0,5,0,0"
                                             Width="200" />
                    <controls:ErrorMessage HorizontalAlignment="Left" Margin="0,5,0,0" ErrorPath="ProxyPassword" />
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>