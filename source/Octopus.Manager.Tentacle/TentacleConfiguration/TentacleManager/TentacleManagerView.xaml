                                                    <Ellipse.Style>
                                                        <Style TargetType="{x:Type Ellipse}">
                                                            <Style.Triggers>
                                                                <DataTrigger
                                                                    Binding="{Binding Path=ServiceWatcher.IsNotRunning}"
                                                                    Value="True">
                                                                    <Setter Property="Fill" Value="#DB4437" />
                                                                </DataTrigger>
                                                                <DataTrigger
                                                                    Binding="{Binding Path=ServiceWatcher.IsNotRunning}"
                                                                    Value="False">
                                                                    <Setter Property="Fill" Value="#FF53B953" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <Path Fill="#FFFFFFFF" StrokeThickness=".5" Stroke="#FFFFFFFF">
                                                    <Path.Style>
                                                        <Style TargetType="{x:Type Path}">
                                                            <Style.Triggers>
                                                                <DataTrigger
                                                                    Binding="{Binding Path=ServiceWatcher.IsNotRunning}"
                                                                    Value="False">
                                                                    <Setter Property="Data">
                                                                        <Setter.Value>
                                                                            <PathGeometry
