                                                            <DataTrigger
                                                                Binding="{Binding Path=ServiceWatcher.IsNotRunning}"
                                                                Value="True">
                                                                <Setter Property="Fill" Value="#747474" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Rectangle.Style>
                                            </Rectangle>
