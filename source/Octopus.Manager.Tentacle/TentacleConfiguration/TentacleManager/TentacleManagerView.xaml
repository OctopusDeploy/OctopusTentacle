                                                </Path>
                                            </Canvas>
                                        </Canvas>
                                    </Canvas>
                                </Viewbox>
                                <TextBlock Text="{Binding InstanceName}"
                                           Style="{StaticResource MaterialDesignTitleTextBlock}" FontSize="24"
                                           VerticalAlignment="Center" Margin="7,0,0,0" />
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="START SERVICE" Click="StartServiceClicked"
                                        Visibility="{Binding Path=ServiceWatcher.CanStart, Mode=OneWay, Converter={StaticResource Converter.BooleanToVisibilityConverter}}" />
                                <Button Content="STOP SERVICE" Click="StopServiceClicked"
                                        Visibility="{Binding Path=ServiceWatcher.CanStop, Mode=OneWay, Converter={StaticResource Converter.BooleanToVisibilityConverter}}" />
                                <materialDesign:PopupBox
                                    DockPanel.Dock="Right"
                                    PlacementMode="BottomAndAlignRightEdges">
                                    <StackPanel>
                                        <Button Content="Restart"
                                                IsEnabled="{Binding Path=ServiceWatcher.CanRestart, Mode=OneWay}"
                                                Click="RestartServiceClicked" />
                                        <Button Content="Reinstall" Click="RepairServiceClicked" />
                                        <Separator />
                                        <Button Content="Delete" Click="DeleteInstance" />
                                    </StackPanel>
                                </materialDesign:PopupBox>
                            </StackPanel>
                        </Grid>
                        <Grid HorizontalAlignment="Stretch" Margin="0,20,0,0">
                            <Grid.Resources>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <!-- Status -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" HorizontalAlignment="Right"
                                       Margin="0,1,20,10" FontWeight="Bold" />
