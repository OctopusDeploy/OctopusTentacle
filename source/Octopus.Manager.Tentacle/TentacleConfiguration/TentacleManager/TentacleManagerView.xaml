    x:Class="Octopus.Manager.Tentacle.TentacleConfiguration.TentacleManager.TentacleManagerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    Foreground="#333333"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.IsSharedSizeScope="True">
        <Border Name="findingInstallation">
            <StackPanel Margin="10" Height="300" VerticalAlignment="Center">
                <TextBlock Margin="10" TextAlignment="Center" Text="Searching for Octopus Tentacle installation..." />
            </StackPanel>
        </Border>

        <Border Name="newInstallation" Margin="30" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Welcome!" FontSize="13pt" Margin="10" TextAlignment="Center" />
                <TextBlock Margin="10" TextAlignment="Center" TextWrapping="Wrap"
                           Text="Our getting started wizard will guide you through configuring your Tentacle deployment agent." />
                <Button Click="SetupTentacle" Margin="20" HorizontalAlignment="Center" Padding="18,8,18,8"
                        Style="{StaticResource Button.Success}">
                    GET STARTED
                </Button>
            </StackPanel>
        </Border>

        <Border Name="existingInstallation" Background="White">
            <StackPanel>
                <Border Background="White">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="280" ShadowDepth="3" BlurRadius="5" Opacity="0.2" />
                    </Border.Effect>
                    <Grid Margin="20,10">
                        <Button Content="ADD NEW TENTACLE" FontSize="12" FontWeight="Medium"
                                HorizontalAlignment="Right" Style="{StaticResource Button.Success}"
                                VerticalAlignment="Center" Click="CreateNewInstance" />
                        <TextBlock Text="Tentacle Windows Service"
                                   Style="{StaticResource MaterialDesignHeadlineTextBlock}" FontSize="20"
                                   VerticalAlignment="Center" HorizontalAlignment="Left" />
                    </Grid>
                </Border>
                <ScrollViewer Margin="20" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                              VerticalScrollBarVisibility="Auto">
