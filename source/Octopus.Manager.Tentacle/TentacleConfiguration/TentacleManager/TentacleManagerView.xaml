                                        </Path>
                                    </Canvas>
                                </Viewbox>
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                    <TextBox Style="{x:Null}" Foreground="#333333"
                                             FontFamily="{StaticResource MaterialDesignFont}" FontWeight="Bold"
                                             Margin="5,2,5,0" Text="{Binding Path=Thumbprint, Mode=OneWay}"
                                             BorderThickness="0" IsReadOnly="True" TextWrapping="Wrap"
                                             Background="Transparent" />
                                    <Button Style="{StaticResource CopyToClipboardButton}" Padding="0" Height="18"
                                            Width="18" ToolTip="Copy to clipboard" Click="CopyThumbprintToClipboard" />
                                </StackPanel>
                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0"
                                           TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Gray">
                                    <Run Text="{Binding Path=Trust, Mode=OneWay}" />
                                    <LineBreak />
                                    <Run>This should match the value shown on the Machine configuration page in the Octopus web portal.</Run>
                                </TextBlock>
                            </Grid>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Proxy Server Settings:"
                                       HorizontalAlignment="Right" Margin="0,0,20,23" FontWeight="Bold" />
                            <StackPanel Grid.Row="5" Grid.Column="1">
                                <TextBlock VerticalAlignment="Top" TextWrapping="Wrap"
                                           Text="{Binding Path=ProxyStatus}" />
                                <Button Content="CHANGE" HorizontalAlignment="Left" Margin="0,5,0,0" Click="ShowProxy" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Border>
