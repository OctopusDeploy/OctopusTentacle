                                                                                FillRule="EvenOdd" />
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </DataTrigger>
                                                                <DataTrigger
                                                                    Binding="{Binding Path=ServiceWatcher.IsNotRunning}"
                                                                    Value="True">
                                                                    <Setter Property="Data">
                                                                        <Setter.Value>
                                                                            <PathGeometry
                                                                                Figures="M11.53 10.037728L9.007273 7.515 11.53 4.992273 10.537728 4 8.015 6.522727 5.492273 4 4.5 4.992273 7.022727 7.515 4.5 10.037728l.992273.992272L8.015 8.507273 10.537728 11.03z"
                                                                                FillRule="EvenOdd" />
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Path.Style>
                                                </Path>
                                            </Canvas>
                                        </Canvas>
                                    </Viewbox>
                                    <TextBlock
                                        Text="{Binding Path=ServiceWatcher.StatusSummary, Converter={StaticResource Converter.CapitalizeFirstLetterConverter}}"
                                        VerticalAlignment="Top">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Foreground" Value="Green" />
                                                <Setter Property="Margin" Value="5,-1,0,0" />
                                                <Setter Property="FontWeight" Value="Medium" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=ServiceWatcher.IsNotRunning}"
                                                                 Value="True">
                                                        <Setter Property="Foreground" Value="#db4437" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                                <Rectangle Fill="Transparent">
                                    <Rectangle.Style>
                                        <Style TargetType="{x:Type Rectangle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=ServiceWatcher.IsNotRunning}"
                                                             Value="True">
                                                    <Setter Property="ToolTip">
                                                        <Setter.Value>
                                                            <TextBlock>
                                                                The Tentacle Windows Service (
                                                                <Run
                                                                    Text="{Binding Path=ServiceWatcher.ServiceName, Mode=OneWay}" />
                                                                ) is
                                                                <Run Text="{Binding Path=ServiceWatcher.StatusSummary}" />
                                                                .
                                                            </TextBlock>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Rectangle.Style>
                                </Rectangle>
                            </Grid>

                            <!-- Communication Mode -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Communication Mode:"
                                       HorizontalAlignment="Right" Margin="0,0,20,25" FontWeight="Bold" />
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CommunicationMode}"
                                       VerticalAlignment="Top" />

                            <!-- Home Directory -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Home Directory:" HorizontalAlignment="Right"
                                       Margin="0,0,20,10" FontWeight="Bold" />
                            <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Top">
                                <Hyperlink Click="BrowseHome">
                                    <Run Text="{Binding Path=HomeDirectory}" />
                                </Hyperlink>
                            </TextBlock>
                            <!-- Logs Directory -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Logs Directory:" HorizontalAlignment="Right"
                                       Margin="0,0,20,23" FontWeight="Bold" />
                            <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Top">
                                <Hyperlink Click="BrowseLogs">
                                    <Run Text="{Binding Path=LogsDirectory}" />
                                </Hyperlink>
                            </TextBlock>

