<UserControl x:Class="Octopus.Manager.Tentacle.Controls.AutoCompleteTagControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Name="Root"
             MinHeight="75"
             d:DesignHeight="200" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="RoundCorner" TargetType="{x:Type Button}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="grid">
                            <Border x:Name="border" CornerRadius="10" Background="Transparent" Margin="1">
                                <Viewbox Stretch="Uniform">
                                    <Canvas Name="svg4" Width="24" Height="24">
                                        <Path Name="path2" Fill="#42000000" Data="M12 2C6.47 2 2 6.47 2 12s4.47 10 10 10 10-4.47 10-10S17.53 2 12 2zm5 13.59L15.59 17 12 13.41 8.41 17 7 15.59 10.59 12 7 8.41 8.41 7 12 10.59 15.59 7 17 8.41 13.41 12 17 15.59z"/>
                                    </Canvas>
                                </Viewbox>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Fill" TargetName="path2" Value="#67000000"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" TargetName="grid" Value="0.25"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="22"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ItemsControl Grid.Row="0" ItemsSource="{Binding SelectedTags, ElementName=Root}" Margin="0,2" MinHeight="26">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#e7e7e7" CornerRadius="11" Margin="0,2,5,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Border Height="22" Width="22" Background="#42000000" CornerRadius="100">
                                <Viewbox Width="13" Height="13" Stretch="Uniform">
                                    <Canvas Width="24" Height="24">
                                        <Path Name="path4541" Fill="#333333" Data="M21.41 11.58l-9-9C12.05 2.22 11.55 2 11 2H4c-1.1 0-2 .9-2 2v7c0 .55.22 1.05.59 1.42l9 9c.36.36.86.58 1.41.58.55 0 1.05-.22 1.41-.59l7-7c.37-.36.59-.86.59-1.41 0-.55-.23-1.06-.59-1.42zM5.5 7C4.67 7 4 6.33 4 5.5S4.67 4 5.5 4 7 4.67 7 5.5 6.33 7 5.5 7z"/>
                                    </Canvas>
                                </Viewbox>
                            </Border>
                            <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{Binding}" Padding="5,2" Foreground="#333333"></TextBlock>
                            <Button Style="{StaticResource RoundCorner}" Grid.Column="2" Width="22" Height="22" Command="{Binding RemoveCommand, ElementName=Root}" CommandParameter="{Binding}" Margin="0,0,2,0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel></WrapPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        <Grid Grid.Row="1">
            <TextBox Name="TextBox" Text="{Binding Text, ElementName=Root, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" GotFocus="SuggestionsPopup_OnGotFocus" TextChanged="TextBoxBase_OnTextChanged" PreviewKeyDown="TextBox_OnPreviewKeyDown" VerticalContentAlignment="Center">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding EnterCommand, ElementName=Root}" CommandParameter="{Binding ElementName=TextBox, Path=Text}"/>
                    <KeyBinding Key="OemSemicolon" Command="{Binding EnterCommand, ElementName=Root}" CommandParameter="{Binding ElementName=TextBox, Path=Text}"/>
                    <KeyBinding Key="OemComma" Command="{Binding EnterCommand, ElementName=Root}" CommandParameter="{Binding ElementName=TextBox, Path=Text}"/>
                </TextBox.InputBindings>
            </TextBox>
            <Popup Name="SuggestionsPopup" AllowsTransparency="True" IsOpen="False" StaysOpen="False">
                <Border BorderBrush="Black" BorderThickness="1" Width="{Binding ElementName=TextBox, Path=ActualWidth}">
                    <ListView Name="SuggestionsList" ClipToBounds="False" Background="White" ItemsSource="{Binding FilteredSuggestedTags.View, ElementName=Root}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <EventSetter Event="PreviewMouseLeftButtonDown" Handler="EventSetter_OnHandler" />
                                <EventSetter Event="KeyDown" Handler="EventSetter_OnHandler"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Border>
            </Popup>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Name="ValidationError" Visibility="Collapsed">
            <TextBlock Foreground="Red">The <Run Text="{Binding ElementName=Root, Path=TagName}"/> "<Run Text="{Binding ElementName=TextBox, Path=Text}"/>" has already been selected.</TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
